	public static int recall(int n)
	{
		/*if (n == 1)
		{
		//	System.out.println(((n-1)/2%3)==0 ? 1 :0);
			return n;
		} else
		{
			System.out.println(((n-1)/2%2)==0 ? 1 :0);
			return recall(n-1)/2;
		}*/
		if (n%2==0)
		{
			System.out.println(((n-1)/2%2)==0 ? 1 :0);
			return recall(n-1)/2;
		}else if(n==2)
		{
			System.out.println(0);
			return n;
		}
		else if(n==1)
		{
			System.out.println(1);
			return n;
		}
		return n;

	}
