package bitjava.day4;

public class Prob01
{

	public static void main(String[] args)
	{
		//2차원 배열 생성
		int[][] arr = new int[4][4];
		int num = 0;
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				num+=1;
				arr[i][j] = num;

			}
		}
		int[][] copyarr=arr.clone();
		//if(copyarr!=arr) System.out.println("참조값이 같음.");
		
		// 뒤집기
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				if(i==arr.length-1){
					arr[i][j] = copyarr[i-3][j];
					System.out.println("돌");
				}
				else{
					arr[i][j] = copyarr[i+1][j];
					System.out.println("감");
				}
			}
		}
		
		// 프린트용
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				System.out.print(arr[i][j] +"	"); //System.out.print(arr[i][j] +"	"+i+" "+j+"	");
			}
			System.out.println();
		}
	}

}
