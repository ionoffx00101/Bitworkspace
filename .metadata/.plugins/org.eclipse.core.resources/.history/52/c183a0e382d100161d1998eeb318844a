package jswing;

import java.awt.Container;

import javax.swing.*;

public class MainPannel extends JFrame
{
	private JPanel mainPanel;
	private Container contentPane;

	public Mainpannel()
	{
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		contentPane = getContentPane();
		contentPane.setLayout(null);
		setBounds(0, 0, 1200, 800);

		setTitle("테트리스..");
		panel();

		setVisible(true);
	}

	private void panel()
	{
		PanController student_controller = new PanController();
		mainPanel = new PanView(student_controller);
		mainPanel.setLayout(null);
		mainPanel.setBounds(180, 100, 774, 700);
		mainPanel.setBackground(new Color(120, 0, 255));

		contentPane.add(mainPanel);
	}

	public static void main(String[] args)
	{
		JPanel mainpannel = new JPanel();
		JButton startbtn = new JButton("시작");
	}

}
