class NewsPaper{
	String todayNews;
	boolean isTodayNews=false;
	public void setTodayNews(String news){
		todayNews=news;
		isTodayNews= true;
		
		notifyAll();
	}
	public String getTodayNews(){
		if (!isTodayNews)
		{
			try
			{
				wait();
			} catch (Exception e)
			{
				e.printStackTrace();
			}
		}
	}
}
