	public static void add(int a,int b){
		System.out.println("add :"+(a+b));
		
		System.out.println("add :"+(a-b));
		
		System.out.println("add :"+(a*b));
		
		System.out.println("add :"+(a/b)+"나머지"+(a%b));
	}
	

