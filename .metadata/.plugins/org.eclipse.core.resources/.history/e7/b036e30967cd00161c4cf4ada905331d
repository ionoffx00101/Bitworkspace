package bitjava.day4;

public class Prob01
{

	public static void main(String[] args)
	{
		//2차원 배열 생성
		int[][] arr = new int[4][4];
		int num = 0;
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				num+=1;
				arr[i][j] = num;

			}
		}
		// 뒤집기
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				//arr[i][j] = arr[i+4][j+4];
			}
		}
		
		// 프린트용
		for (int i = 0; i < arr.length; i++)
		{
			for (int j = 0; j < arr[i].length; j++)
			{
				System.out.print(arr[i][j] +"	");
			}
			System.out.println();
		}
	}

}
